
@{
    ViewBag.Title = "Index";
}

<h2>订单管理</h2>

<div class="col-md-12">
    <!-- BEGIN SAMPLE TABLE PORTLET-->
    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-bell-o"></i>订单列表
            </div>
            <div class="actions">
                <a class=" btn green btn-outline sbold" href="~/Bill/Add"> 新建 </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="table-scrollable">
                <table class="table table-striped table-bordered table-advance table-hover">
                    <thead>
                        <tr>
                            <th>
                                订单号
                            </th>
                            <th>订单时间</th>
                            <th>客户名称</th>
                            <th>手机号</th>
                            <th>行程名称</th>
                            <th>住宿名称</th>
                            <th>接送机时间</th>
                            <th>
                                包车时间
                            </th>
                            <th>
                                备注
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var trip in Model)
                            {
                                <tr>
                                    <td class="highlight" width="10%">
                                        @trip.ScheduleName
                                    </td>
                                    <td class="highlight" width="10%">
                                        @trip.CustomerName
                                    </td>
                                    <td class="highlight" width="10%">
                                        @string.Format("{0:yyyy-MM-dd}", trip.VisitDate)
                                    </td>
                                    <td class="highlight" width="5%">
                                        @trip.Fee
                                    </td>
                                    <td class="highlight" width="5%">
                                        @trip.CustomerCount
                                    </td>
                                    <td class="highlight" width="20%">
                                        @trip.CustomRequire
                                    </td>
                                    <td class="hidden-xs" width="15%"> @trip.Remark</td>
                                    <td width="15%">
                                        <a onclick="detail(@trip.ScheduleID)" class="btn btn-outline btn-circle btn-sm purple">
                                            <i class="fa fa-edit"></i> 详情
                                        </a>
                                        <a onclick="copyToClipBoard(@trip.ScheduleID)" class="btn btn-outline btn-circle btn-sm purple">
                                            <i class="fa fa-link"></i> 复制链接
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- END SAMPLE TABLE PORTLET-->
</div>
